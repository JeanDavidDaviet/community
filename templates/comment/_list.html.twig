{% if comments %}
    {% for comment in comments %}
    <ul class="comments">
        <li class="comment">
            <p class="comment-header">Par <a href="{{ path('user_show', {'id': comment.author.id}) }}">{{ comment.author.firstname ~ ' ' ~ comment.author.lastname }}</a>, {{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}, {{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
            <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ "Editer" | trans }}</a>
            <div class="comment-content">{{ comment.content }}</div>
        </li>
    </ul>
    {% endfor %}
{% endif %}