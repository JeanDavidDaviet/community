{% extends 'sidebar.html.twig' %}

{% block title %}{{ "Commentaire" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Commentaire" | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ "Identifiant" | trans }}</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ "Contenu" | trans }}</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>{{ "Crée le" | trans }}</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>{{ "Mis à jour le" | trans }}</th>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">{{ "Retour à la liste" | trans }}</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ "Éditer" | trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
