{% extends 'base.html.twig' %}

{% block title %}{{ "Liste des commentaires" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Liste des commentaires" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "Identifiant" | trans }}</th>
                <th>{{ "Contenu" | trans }}</th>
                <th>{{ "Crée le" | trans }}</th>
                <th>{{ "Mis à jour le" | trans }}</th>
                <th>{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.updatedAt ? comment.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">{{ "Afficher" | trans }}</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">{{ "Editer" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "Aucun commentaire trouvé" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">{{ "Créer un nouveau commentaire" | trans }}</a>
{% endblock %}
