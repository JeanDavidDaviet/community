{% extends 'base.html.twig' %}

{% block title %}{{ "Liste des groupes de pages" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Liste des groupes de pages" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "Identifiant" | trans }}</th>
                <th>{{ "Titre" | trans }}</th>
                <th>{{ "Chemin" | trans }}</th>
                <th>{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for page_group in page_groups %}
            <tr>
                <td>{{ page_group.id }}</td>
                <td>{{ page_group.title }}</td>
                <td>{{ page_group.slug }}</td>
                <td>
                    <a href="{{ path('page_group_show', {'id': page_group.id}) }}">{{ "Afficher" | trans }}</a>
                    <a href="{{ path('page_group_edit', {'id': page_group.id}) }}">{{ "Éditer" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ "Aucun groupe de page trouvé" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_group_new') }}">Create new</a>
{% endblock %}
