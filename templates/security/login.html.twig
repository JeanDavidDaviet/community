{% extends 'no-sidebar.html.twig' %}

{% block title %}{{ "Connexion" | trans }}{% endblock %}

{% block body %}
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Vertically centered hero sign-up form</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light {% if error %}was-validated{% endif %}" method="post">
          {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
          {% endif %}
          <div class="form-floating mb-3">
            <input name="email" type="email" value="{{ last_username }}" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">{{ "Email" | trans }}</label>
          </div>
          <div class="form-floating mb-3">
            <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">{{ "Mot de passe" | trans }}</label>
          </div>
          <div class="checkbox mb-3">
            <label>
              <input type="checkbox" name="_remember_me">{{ "Se souvenir de moi" | trans }}
            </label>
          </div>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
          <button class="w-100 btn btn-lg btn-primary" type="submit">{{ "Se connecter" | trans }}</button>
          <hr class="my-4">
            <small class="text-muted"><a href="{{ path('app_register') }}">{{ "Je n'ai pas encore de compte" | trans}}</a></small>
        </form>
      </div>
    </div>
  </div>
