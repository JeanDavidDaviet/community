{% extends 'no-sidebar.html.twig' %}

{% block title %}{{ "Connexion" | trans }}{% endblock %}

{% block body %}

  {% for flash in app.flashes('success') %}
    <div class="alert alert-success" role="alert">{{ flash }}</div>
  {% endfor %}

  <form class="{% if error %}was-validated{% endif %}" method="post">
    <div>
      {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
      {% endif %}
      <div class="form-group">
        <label for="email">{{ "Email" | trans }}</label>
        <input id="email" name="email" type="email" value="{{ last_username }}" class="form-input" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <label for="password">{{ "Mot de passe" | trans }}</label>
        <input id="password" name="password" type="password" class="form-input">
      </div>
      <label>
        <input type="checkbox" name="_remember_me">{{ "Se souvenir de moi" | trans }}
      </label>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
    <button class="w-100 btn btn-lg btn-primary" type="submit">{{ "Se connecter" | trans }}</button>
    <small><a href="{{ path('app_register') }}">{{ "Je n'ai pas encore de compte" | trans}}</a></small>
  </form>
{% endblock %}
