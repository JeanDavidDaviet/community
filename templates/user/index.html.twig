{% extends 'sidebar.html.twig' %}

{% block title %}{{ "Liste des membres" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Liste des membres" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "Identifiant" | trans }}</th>
                <th>{{ "Email" | trans }}</th>
                <th>{{ "Vérifié" | trans }}</th>
                <th>{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">{{ "Afficher" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "Aucun membre trouvé" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
