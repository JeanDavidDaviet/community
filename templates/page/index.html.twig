{% extends 'base.html.twig' %}

{% block title %}{{ "Liste des pages" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Liste des pages" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ "Identifiant" | trans }}</th>
                <th>{{ "Chemin" | trans }}</th>
                <th>{{ "Contenu" | trans }}</th>
                <th>{{ "Crée le" | trans }}</th>
                <th>{{ "Publié le" | trans }}</th>
                <th>{{ "Mis à jour le" | trans }}</th>
                <th>{{ "Actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.createdAt ? page.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.publishedAt ? page.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ page.updatedAt ? page.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('page_show', {'slug': page.slug}) }}">{{ "Afficher" | trans }}</a>
                    <a href="{{ path('page_edit', {'id': page.id}) }}">{{ "Editer" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "Aucune page trouvée" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('page_new') }}">{{ "Créer une nouvelle page" | trans }}</a>
{% endblock %}
