{% extends 'no-sidebar.html.twig' %}

{% block title %}{{ "Create an account" | trans }}{% endblock %}

{% block body %}
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Vertically centered hero sign-up form</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light {% if registrationForm.vars.submitted %}was-validated{% endif %}" method="post">
            {{ form_start(registrationForm) }}
            {# {{ dump(registrationForm) }} #}
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.email) }}
                {{ form_label(registrationForm.email) }}
                <div class="invalid-feedback">
                {{ form_errors(registrationForm.email) }}
                </div>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.firstname) }}
                {{ form_label(registrationForm.firstname, 'Firstname' | trans) }}
                <div class="invalid-feedback">
                {{ form_errors(registrationForm.firstname) }}
                </div>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.lastname) }}
                {{ form_label(registrationForm.lastname, 'Name' | trans) }}
                <div class="invalid-feedback">
                {{ form_errors(registrationForm.lastname) }}
                </div>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_label(registrationForm.plainPassword, "Password" | trans) }}
                <div class="invalid-feedback">
                {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">{{ "Create an account" | trans }}</button>
            <small class="text-muted">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, "By clicking on \"Create an account\" you accept the terms of use." | trans) }}
                <div class="invalid-feedback">
                {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            </small>
            <hr class="my-4">
            <small class="text-muted"><a href="{{ path('app_login') }}">{{ "I already have an account" | trans}}</a></small>
            {{ form_end(registrationForm) }}
        </form>
      </div>
    </div>
  </div>
<form>
{% endblock %}
