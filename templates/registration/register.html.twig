{% extends 'no-sidebar.html.twig' %}

{% block title %}{{ "Créer un compte" | trans }}{% endblock %}

{% block body %}
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Vertically centered hero sign-up form</h1>
        <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrap’s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light" method="post">
            {{ form_start(registrationForm) }}

            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.email) }}
                {{ form_label(registrationForm.email) }}
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword) }}
                {{ form_label(registrationForm.plainPassword, "Mot de passe") }}
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">{{ "Créer un compte" | trans }}</button>
            <small class="text-muted">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, "En cliquant sur créer un compte, vous acceptez les conditions d'utilisations.") }}
            </small>
            <hr class="my-4">
            <small class="text-muted"><a href="{{ path('app_login') }}">{{ "J'ai déjà un compte" | trans}}</a></small>
            {{ form_end(registrationForm) }}
        </form>
      </div>
    </div>
  </div>
<form>
{% endblock %}
