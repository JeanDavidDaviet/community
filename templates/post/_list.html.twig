{% for post in posts %}
  <article class="box">
      <div class="box-inside">
          <h2>{{ post.title }}</h2>
          <p>Publié le {{ post.createdAt ? post.createdAt|date('d/m/Y') : '' }} par <a href="{{ path('user_show', {'id': post.author.id}) }}">{{ post.author.firstname ~ ' ' ~ post.author.lastname }}</a></p>
          <p>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</p>
          <div>{{ post.content }}</div>
          <p>
              <a href="{{ path('post_show', {'id': post.id}) }}">{{ "Afficher" | trans }}</a>
              <a href="{{ path('post_edit', {'id': post.id}) }}">{{ "Editer" | trans }}</a>
          </p>
      </div>
  </article>
{% else %}
  <p>{{ "Aucune publication trouvée" | trans }}</p>
{% endfor %}